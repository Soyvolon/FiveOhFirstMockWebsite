@if (Trooper is not null)
{
<td>@Trooper.Id</td>
<td>@Trooper.UserName</td>
<td>@Trooper.Slot.ToString()</td>
<td>@Trooper.Role.ToString()</td>
<td><a href="/trooper/@Trooper.Id" class="oi-arrow-right oi" aria-hidden="true"></a></td>
<AuthorizeView Policy="RequireClerk">
    <Authorized>
        <td>
            <a href="/roster/clerk?edit=@Trooper.Id">Edit</a>
        </td>
    </Authorized>
</AuthorizeView>
}

@code {
    [Parameter]
    public Trooper? Trooper { get; set; }
}
